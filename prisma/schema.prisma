generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique

  firstName String?
  lastName String?
  phoneNumber String?

  city String?
  pointOfIssue String?

  role Boolean @default(false)
  hash String

  basket Basket?
  favourites Favourites?

  @@map("users")
}

model Basket {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique

  items Item[]

  @@map("baskets")
}

model Item {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name String
  desc String?

  price Int
  sale Int?

  sizes String[]

  sex Boolean
  publicationDate DateTime @default(now())

  img String

  brand String
  color String
  type String

  baskets Basket[]
  favourites Favourites[]

  @@map("items")
}

model Favourites {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique

  items Item[]

  @@map("favourites")
}