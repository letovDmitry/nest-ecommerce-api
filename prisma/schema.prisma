generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique

  firstName String?
  lastName String?
  phoneNumber String?

  city String?
  pointOfIssue String?

  role Boolean @default(false)
  hash String

  basket Basket?
  favourites Favourites?
  orders Order[]

  @@map("users")
}

model Basket {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique

  items Item[]

  @@map("baskets")
}

model Item {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name String
  desc String?
  inStock Int

  price Int
  sale Int?

  sizes String[]

  sex String
  publicationDate DateTime @default(now())

  img String

  brand Brand @relation(fields: [brandName], references: [name])
  brandName String

  color String
  type String

  baskets Basket[]
  favourites Favourites[]
  orders Order[]

  @@map("items")
}

model Favourites {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique

  items Item[]

  @@map("favourites")
}

model Brand {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name String @unique

  items Item[]
}

model Order {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User @relation(fields: [userId], references: [id])
  userId Int  

  orderId String @unique
  status String

  items Item[]
}